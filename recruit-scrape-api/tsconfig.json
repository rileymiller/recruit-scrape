{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "types": [
      "jest",
      "node"
    ],
    "target": "es2019",
    "outDir": "./dist",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "__tests__/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}